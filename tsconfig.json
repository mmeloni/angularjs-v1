{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "types": [
            "node",
            "core-js",
            "angular",
            "jquery",
            "fb",
            "jasmine",
            "lodash",
            "socket.io-client",
            "numeral"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "useTranspileModule": true,
        "useCache": true,
        "cacheDirectory": ".awesome-typescript-loader-cache"
    },
    "exclude": [
        "node_modules",
        "doc",
        "**/*.spec.ts"
    ],
    "compileOnSave": false
}
